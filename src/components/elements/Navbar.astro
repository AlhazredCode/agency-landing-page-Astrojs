    <Container>
        <nav class="w-full flex justify-between gap-6 relative">
            <!-- logo -->
            <div class="min-w-max inline-flex relative">
                <a href="/" class="relative flex items-center gap-3">
                    <svg width="50" height="50" viewBox="0 0 690 690" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M231.25 670.125C96.5649 623.338 0 495.25 0 344.612C0 154.32 154.243 0 344.612 0C534.98 0 689.223 154.32 689.223 344.612C689.223 479.22 612.063 595.803 499.545 652.484" fill="#4A44BC"/>
