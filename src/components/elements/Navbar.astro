---
import BtnLink from "../shared/BtnLink.astro";
import Container from "../shared/Container.astro";
import  Navitem from "../shared/Navitem.astro";

const navItems = [
    {
        href:"#",
        text:"Hola"
    },
    {
        href:"#services",
        text:"Servicios"
    },
    {
        href:"#about-us",
        text:"Portafolio"
    },
   
]
---

