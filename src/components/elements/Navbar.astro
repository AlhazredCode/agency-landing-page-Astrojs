                        <path d="M273.818 681.937C259.322 678.946 245.055 674.957 231.326 670.125L234.317 641.823L273.818 681.937Z" fill="#18B7CA"/>
                        <path d="M321.141 167.896V217.137H263.08V140.897H294.143L321.141 167.896Z" fill="#F03D36"/>
